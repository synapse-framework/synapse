{
  "name": "@snps/docs",
  "version": "1.0.0",
  "description": "Comprehensive Synapse framework documentation built with Synapse itself",
  "type": "module",
  "main": "dist/index.js",
  "devDependencies": {
    "@types/node": "^20.19.19",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "synapse",
    "documentation",
    "docs",
    "framework",
    "typescript",
    "showcase"
  ],
  "author": "Synapse Framework",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "test": "node --test dist/__tests__/**/*.test.js",
    "serve": "npm run build && npm start",
    "generate-static": "tsx src/generate-static.ts",
    "generate": "npm run build && npm run generate-static"
  }
}
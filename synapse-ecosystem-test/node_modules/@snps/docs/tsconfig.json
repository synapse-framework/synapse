{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@snps/core": ["../../packages/core/src"],
      "@snps/routing": ["../../packages/routing/src"],
      "@snps/database": ["../../packages/database/src"],
      "@snps/auth": ["../../packages/auth/src"],
      "@snps/templating": ["../../packages/templating/src"],
      "@snps/graphql": ["../../packages/graphql/src"],
      "@snps/api-docs": ["../../packages/api-docs/src"],
      "@snps/file-upload": ["../../packages/file-upload/src"],
      "@snps/email": ["../../packages/email/src"],
      "@snps/notifications": ["../../packages/notifications/src"],
      "@snps/ai": ["../../packages/ai/src"],
      "@snps/blockchain": ["../../packages/blockchain/src"],
      "@snps/collaboration": ["../../packages/collaboration/src"],
      "@snps/workflow": ["../../packages/workflow/src"],
      "@snps/pwa": ["../../packages/pwa/src"],
      "@snps/voice": ["../../packages/voice/src"],
      "@snps/webassembly": ["../../packages/webassembly/src"],
      "@snps/webrtc": ["../../packages/webrtc/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

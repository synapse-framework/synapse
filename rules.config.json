{
  "version": "1.0.0",
  "description": "Synapse Framework Rule Engine Configuration",
  "monitors": {
    "security": {
      "enabled": true,
      "updateInterval": 60,
      "dataSources": ["github-advisories", "cve-database", "rust-security"],
      "rules": ["SEC-001", "SEC-002", "SEC-003", "SEC-004", "SEC-005"]
    },
    "performance": {
      "enabled": true,
      "updateInterval": 120,
      "dataSources": ["lighthouse", "webpagetest", "bundle-analyzer"],
      "rules": ["PERF-001", "PERF-002", "PERF-003", "PERF-004", "PERF-005"]
    },
    "code-quality": {
      "enabled": true,
      "updateInterval": 30,
      "dataSources": ["eslint-rules", "prettier-config", "typescript-config"],
      "rules": ["QUALITY-001", "QUALITY-002", "QUALITY-003", "QUALITY-004", "QUALITY-005"]
    },
    "accessibility": {
      "enabled": true,
      "updateInterval": 180,
      "dataSources": ["wcag-guidelines", "axe-core", "accessibility-audit"],
      "rules": ["A11Y-001", "A11Y-002", "A11Y-003", "A11Y-004", "A11Y-005"]
    },
    "compatibility": {
      "enabled": true,
      "updateInterval": 240,
      "dataSources": ["browser-support", "node-versions", "rust-editions"],
      "rules": ["COMPAT-001", "COMPAT-002", "COMPAT-003", "COMPAT-004", "COMPAT-005"]
    },
    "testing": {
      "enabled": true,
      "updateInterval": 60,
      "dataSources": ["jest-config", "coverage-standards", "test-patterns"],
      "rules": ["TEST-001", "TEST-002", "TEST-003", "TEST-004", "TEST-005"]
    }
  },
  "global": {
    "autoFix": true,
    "failOnCritical": true,
    "failOnHigh": true,
    "reportFormats": ["markdown", "json"],
    "excludePatterns": [
      "node_modules/**",
      "dist/**",
      "build/**",
      "target/**",
      "coverage/**",
      "*.min.js",
      "*.min.css"
    ]
  }
}